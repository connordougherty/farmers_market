<div class="section">
  <div class="container">
    <div class="columns">
      <div class="column is-one-quarter">
        <h1 class="title">Sign up</h1>
        <hr>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <p class="control has-icon">
            <%= f.email_field :email, class: 'input', placeholder: 'Email' %>
            <i class="fa fa-envelope"></i>
          </p>
          <br>
          <p class="control has-icon">
            <%= f.password_field :password, class: 'input', placeholder: 'Password', autocomplete: "off" %>
            <i class="fa fa-lock"></i>
          </p>
          <p class="control has-icon">
            <%= f.password_field :password_confirmation, class: 'input', placeholder: 'Confirm Password', autocomplete: "off" %>
            <i class="fa fa-lock"></i>
          </p>
          <%= f.hidden_field :role, value: 'buyer' %>
          <p class="control">
            <%= f.submit "Sign up", class: 'button is-success' %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</div>
