<p id="notice"><%= notice %></p>

<h1>Listing Storefronts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Info</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @storefronts.each do |storefront| %>
      <tr>
        <td><%= storefront.name %></td>
        <td><%= storefront.info %></td>
        <td><%= storefront.user_id %></td>
        <td><%= link_to 'Show', storefront %></td>
        <td><%= link_to 'Edit', edit_storefront_path(storefront) %></td>
        <td><%= link_to 'Destroy', storefront, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Storefront', new_storefront_path %>
